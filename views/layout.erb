<html>
  <head>
    <title>Code coverage</title>
    <link href='./assets/stylesheet.css' media='screen, projection, print' rel='stylesheet' type='text/css'>
    <script src='./assets/jquery-1.4.2.min.js' type='text/javascript'></script>
    <script src='./assets/jquery.scrollTo-min.js' type='text/javascript'></script>  
    <script src='./assets/jquery.dataTables.min.js' type='text/javascript'></script>   
    <script src='./assets/app.js' type='text/javascript'></script>    
  </head>
  
  <body>
    <div id="back_to_top">
      <a href="#top">Back to top</a>
    </div>
    <a name="top"></a>
    <h1>All files</h1>
    <table id="overview">
      <thead>
        <tr>
          <th>File</th>
          <th>% covered</th>
          <th>LOC</th>
          <th>Lines covered</th>
          <th>Lines missed</th>
        </tr>
      </thead>
      <tbody>
        <% result.source_files.each do |source_file| %>
        <tr>
          <td><a href="#<%= id source_file %>" class="src_link"><%= source_file.filename %></a></td>
          <td class="<%= coverage_css_class(source_file) %>"><%= source_file.covered_percent.round(2).to_s %> %</td>
          <td><%= source_file.lines.count %></td>
          <td><%= source_file.covered_lines.count %></td>
          <td><%= source_file.missed_lines.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <% result.source_files.each do |source_file| %>
      <%= formatted_source_file(source_file) %>
    <% end %>
  </body>
</html>
